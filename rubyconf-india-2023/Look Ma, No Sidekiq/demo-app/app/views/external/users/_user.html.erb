  <img class="w-full h-auto rounded-t-xl" src="<%= user["avatar"] %>" alt="Image Description">
  <div class="p-4 md:p-5">
    <h3 class="text-lg font-bold text-gray-800 dark:text-white">
      <%= user["first_name"] %> <%= user["last_name"] %>
